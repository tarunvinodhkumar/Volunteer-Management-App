<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/event_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:contentDescription="Event Image"
        app:layout_constraintTop_toBottomOf="@id/event_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/event_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Date:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/event_image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Date"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/event_date_label"
        app:layout_constraintLeft_toRightOf="@id/event_date_label"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/event_start_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/event_date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/event_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/event_start_label"
        app:layout_constraintLeft_toRightOf="@id/event_start_label"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/event_end_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/event_start"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/event_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/event_end_label"
        app:layout_constraintLeft_toRightOf="@id/event_end_label"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/event_location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/event_end"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/event_location_label"
        app:layout_constraintLeft_toRightOf="@id/event_location_label"
        app:layout_constraintRight_toRightOf="parent"
        android:linksClickable="true"
        android:autoLink="none"
        android:clickable="true"
        android:textColor="@color/hover_state_color"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/event_organizer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organizer:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/event_location"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/event_organizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organizer"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/event_organizer_label"
        app:layout_constraintLeft_toRightOf="@id/event_organizer_label"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/event_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/event_organizer"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/event_description"
        android:layout_width="250dp"
        android:layout_height="189dp"
        android:layout_marginBottom="16dp"
        android:text="Description"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.831"
        app:layout_constraintLeft_toRightOf="@id/event_description_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/event_description_label"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>